---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<a href="/" class="site-title">{SITE_TITLE}</a>
		<div class="nav-links">
			<HeaderLink href="/">Accueil</HeaderLink>
			<HeaderLink href="/recettes/plats-principaux">Plats</HeaderLink>
			<HeaderLink href="/recettes/desserts">Desserts</HeaderLink>
			<HeaderLink href="/recettes/soupes">Soupes</HeaderLink>
			<HeaderLink href="/recettes/sauces-et-accompagnements">Les extras</HeaderLink>
			<HeaderLink href="/about">Ã€ propos</HeaderLink>
		</div>
	</nav>
</header>

<style>
	header {
		background: white;
		border-bottom: 1px solid var(--border);
		position: sticky;
		top: 0;
		z-index: 100;
	}

	nav {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0.75rem 2rem;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.75rem;
	}

	.site-title {
		font-family: 'Dancing Script', cursive;
		font-size: 2.8rem;
		font-weight: 600;
		color: var(--accent);
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.site-title:hover {
		color: var(--accent-dark);
	}

	.nav-links {
		display: flex;
		gap: 0.5rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.nav-links :global(a) {
		padding: 0.5rem 1rem;
		color: var(--text-muted);
		text-decoration: none;
		font-size: 1.1rem;
		border-radius: 4px;
		transition: color 0.2s ease, background-color 0.2s ease;
	}

	.nav-links :global(a:hover) {
		color: var(--text);
		background-color: var(--background-alt);
	}

	.nav-links :global(a.active) {
		color: var(--accent);
		font-weight: 600;
	}

	@media (max-width: 720px) {
		nav {
			flex-direction: column;
			padding: 0.75rem 1rem;
			gap: 0.5rem;
		}

		.site-title {
			font-size: 2rem;
		}

		.nav-links {
			flex-wrap: wrap;
			justify-content: center;
		}

		.nav-links :global(a) {
			padding: 0.4rem 0.6rem;
			font-size: 0.9rem;
		}
	}
</style>
